$media-query
  @media (max-width: 768px)
    width: 100%
  @media (min-width: 768px)
    width: 750px
  @media (min-width: 992px)
    width: 970px
  @media (min-width: 1200px)
    width: 1170px
$block-caption
  text-decoration: none
  text-transform: uppercase
  letter-spacing: 2px
  margin: .5em 0
  margin-left: 5px
  line-height: .8em
  font-weight: bold

$base-style
  hr
    border: 1px dashed #eef1f8
  strong
    font-weight: bold
  em, cite
    font-style: italic
  sup, sub
    font-size: 0.75em
    line-height: 0
    position: relative
    vertical-align: baseline
  sup
    top: -0.5em
  sub
    bottom: -0.2em
  small
    font-size: 0.85em
  acronym, abbr
    border-bottom: 1px dotted
  ul, ol, dl
    margin: 0 20px
    line-height: 1.9
  ul, ol
    ul, ol
      margin-top: 0
      margin-bottom: 0
  ul
    list-style: circle
  ol
    list-style: decimal
  dt
    font-weight: bold
