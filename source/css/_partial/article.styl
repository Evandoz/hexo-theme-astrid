/*entry-meta*/
.entry-date

.entry-category-link

.entry-tag-list
  display: inline-block
  margin: 0
  -webkit-margin-before: 0
  -webkit-margin-after: 0
  -webkit-margin-start: 0
  -webkit-margin-end: 0
  -webkit-padding-start: 0

.entry-tag-list-item
  display: inline-block
  margin-right: 8px

.entry-comment-link
  float: right
  &:before
    content: "\f075"
    font-family: "FontAwesome"
    padding-right: 8px

/*entry-content*/
.entry-content
  @extend $base-style
  clearfix()
  padding: 0
  p, table
    line-height: 1.9
  h1, h2, h3, h4, h5, h6
    font-weight: bold
  h1, h2, h3, h4, h5, h6
    line-height: 1.1em
    margin: 1.1em 0
  a
    color: #428bca
    text-decoration: none
    &:hover
      color: #fcd088
      text-decoration: none
  ul, ol, dl
    padding-left: 0
    padding-right: 0
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
  iframe
    border: none
  table
    width: 100%
    border-collapse: collapse
    border-spacing: 0
  th
    font-weight: bold
    border-bottom: 3px solid #eef1f8
    padding-bottom: 0.5em
  td
    border-bottom: 1px solid #eef1f8
    padding: 10px 0
  blockquote
    padding: 0.1px 20px
    font-size: 1.1em
    margin: 1.2em 0
    font-family: "futura-pt", Helvetica, Arial, "Hiragino Sans GB", "Hiragino Sans GB W3", Microsoft JhengHei, WenQuanYi Micro Hei, "Microsoft YaHei", sans-serif
    border-left: 5px solid #fcd088
    background: rgba(208,211,248,0.15)
    p
      font-size: 1.1em
      color: #333
      margin: 1.2em 0!important
    footer
      font-size: 14px
      margin: 10px 0
      font-family: -apple-system, "Arial", BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em
  .pullquote
    background: transparent
    border-left: 0px
    padding: 10px 25px
    margin: 18px 0
    font-style: italic
    text-align: left
    width: 45%
    margin: 0
    p
      font-family: Georgia,Microsoft JhengHei,"sans serif"
      font-size: 19px
    &:before
      float: left
      font-family: "FontAwesome"
      content: "\f10d"
      margin-left: -0.5em
    &:after
      float: right
      font-family: "FontAwesome"
      content: "\f10e"
      margin-right: -0.5em
      margin-top: -1em
    &.left
      margin-left: 0.5em
      margin-right: 1em
    &.right
      margin-right: 0.5em
      margin-left: 1em
  .caption
    color: #999
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center
  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

/*toc*/
.toc-article
  border-left: rgba(88,88,88,0.1) 2px solid
  margin: 180px auto 0
  padding: 0 1em

.toc-title
  font-size 120%
  &:before
    font-family: "FontAwesome"
    content: "\f0ca"
    margin-right: .5em

#toc
  line-height: 1.1em
  font-size: 1em
  overflow: hidden

.toc-fixed
  position: fixed
  width: inherit!important
  top: 100px
  margin-top: 0
  overflow: hidden
  z-index: 1

.nav
  padding: 0
  margin: .95em
  margin-bottom: 0
  line-height 1.8em
  li
    list-style-type none
    a:hover
      background-color: transparent !important
  .active > a
    color: #fcd088

.nav-child
  padding-left: 16px

.nav-link
  font-family: 'Josefin Sans', sans-serif
  color: #428bca
  padding 1px !important
  &:hover
    color: #fcd088
    text-decoration: none

#copyright
  blockquote
    padding: 5px 15px
    margin: 0
    font-family: "futura-pt", Helvetica, Arial, "Hiragino Sans GB", "Hiragino Sans GB W3", Microsoft JhengHei, WenQuanYi Micro Hei, "Microsoft YaHei", sans-serif
    border-left: 5px solid #fcd088
    background: rgba(208,211,248,0.15)
    p
      font-size: 14px !important
      color: #333
      margin: 3px 0
      a
        word-wrap: break-word
        color: #333
        &:hover
          color: #fcd088