#page-nav
  clearfix()
  margin: 40px 10px
  background: #fff
  text-align: center
  color: #fcd088
  a, span
    padding: 10px 20px
    line-height: 1
  a
    color: #fcd088
    text-decoration: none
    &:hover
      background: #fcd088
      color: #272727
    i
      font-size: inherit
      line-height: inherit
  .prev, .next
    display: inline-block
    margin: 0 10px
    border: 1px solid #fcd088
  .page-number
    display: inline-block
    margin: 0 10px
    border: 1px solid #fcd088
  .current
    color: #666
    background: #fcd088
    font-weight: bold
  .space
    color: #fcd088